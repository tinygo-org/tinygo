{
	"llvm-target": "xtensa",
	"goos": "linux",
	"goarch": "arm",
	"build-tags": ["xtensa", "baremetal", "linux", "arm"],
	"gc": "conservative",
	"scheduler": "none",
	"compiler": "clang",
	"cflags": [
		"--target=xtensa",
		"-Oz",
		"-Werror",
		"-fshort-enums",
		"-Wno-macro-redefined",
		"-fno-exceptions", "-fno-unwind-tables",
		"-ffunction-sections", "-fdata-sections"
	],
	"ldflags": [
		"--gc-sections"
	]
}
