{
	"llvm-target":   "wasm32--wasi",
	"build-tags":    ["js", "wasm"],
	"goos":          "js",
	"goarch":        "wasm",
	"compiler":      "clang",
	"linker":        "wasm-ld",
	"cflags": [
		"--target=wasm32--wasi",
		"--sysroot={root}/lib/wasi-libc/sysroot",
		"-Oz"
	],
	"ldflags": [
		"--allow-undefined",
		"--stack-first",
		"--export-all",
		"--no-demangle",
		"{root}/lib/wasi-libc/sysroot/lib/wasm32-wasi/libc.a"
	],
	"emulator":      ["node", "targets/wasm_exec.js"],
	"wasm_abi":      "js"
}
